<div align="center">
  <%= will_paginate %>
  <h1>All Alpha Bloggers</h1>
  <% @users.each do |user| %>
      <ul class="listing">
        <div class="row">
          <div class="well col-md-4 col-md-offset-4">
            <li><%= link_to gravatar_for(user), user_path(user) %></li>
            <li class="article-title"><%= link_to user.username, user_path(user) %></li>
            <li><small><%= pluralize(user.articles.count, 'article') if user.articles %></small></li>
            <% if logged_in? and current_user.admin? %>
            <li><%= link_to 'Delete this user', user, method: :delete,
                            data: { confirm: "Are you sure you want to delete #{user.username} with all his/her articles?" },
                            class: 'btn btn-xs btn-danger' %></li>
            <% end %>
          </div>
        </div>
      </ul>
  <% end %>
  <%= will_paginate %>
</div>
